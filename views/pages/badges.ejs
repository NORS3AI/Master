<%- include('../layout') %>

<div class="badges-page">
  <div class="container">
    <div class="badges-header">
      <h1>üèÜ Badges & Achievements</h1>
      <p>Earn badges by engaging with the community</p>
    </div>

    <div class="badges-content">
      <div class="badges-main">
        <div class="badges-info">
          <h2>Available Badges</h2>
          <p>Complete activities and milestones to earn badges and showcase your achievements</p>
        </div>

        <div id="badges-grid" class="badges-grid">
          <!-- Badges will be loaded here -->
        </div>
      </div>

      <div class="badges-sidebar">
        <div class="leaderboard-card">
          <h3>üèÖ Top Collectors</h3>
          <div id="badge-leaderboard" class="leaderboard-list">
            <p class="text-sm text-gray-500">Loading leaderboard...</p>
          </div>
        </div>

        <div class="badge-categories">
          <h3>By Category</h3>
          <div class="category-buttons">
            <button class="category-button active" data-category="all">All Badges</button>
            <button class="category-button" data-category="engagement">Engagement</button>
            <button class="category-button" data-category="contributor">Contributor</button>
            <button class="category-button" data-category="community">Community</button>
            <button class="category-button" data-category="milestone">Milestone</button>
          </div>
        </div>

        <div class="badge-rarity-guide">
          <h3>Rarity Levels</h3>
          <div class="rarity-legend">
            <div class="rarity-item">
              <span class="rarity-dot" style="background-color: #A0A0A0;"></span>
              <span>Common</span>
            </div>
            <div class="rarity-item">
              <span class="rarity-dot" style="background-color: #1EFF00;"></span>
              <span>Uncommon</span>
            </div>
            <div class="rarity-item">
              <span class="rarity-dot" style="background-color: #0070DD;"></span>
              <span>Rare</span>
            </div>
            <div class="rarity-item">
              <span class="rarity-dot" style="background-color: #FF8000;"></span>
              <span>Legendary</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<style>
  .badges-page {
    padding: 2rem 0;
    min-height: 100vh;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  }

  .badges-header {
    text-align: center;
    margin-bottom: 2rem;
    color: white;
  }

  .badges-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .badges-header p {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  .badges-content {
    display: grid;
    grid-template-columns: 1fr 350px;
    gap: 2rem;
    margin-top: 2rem;
  }

  .badges-main {
    background: white;
    border-radius: 12px;
    padding: 2rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .badges-info {
    margin-bottom: 2rem;
  }

  .badges-info h2 {
    font-size: 1.5rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .badges-info p {
    color: #666;
    font-size: 0.95rem;
  }

  .badges-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(250px, 1fr));
    gap: 1.5rem;
  }

  .badge-card {
    border: 3px solid #ddd;
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    transition: all 0.3s;
    background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
    cursor: pointer;
  }

  .badge-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
  }

  .badge-display {
    font-size: 3rem;
    margin-bottom: 1rem;
  }

  .badge-info {
    text-align: center;
  }

  .badge-info h4 {
    font-size: 1.1rem;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .badge-info p {
    font-size: 0.85rem;
    color: #666;
    margin-bottom: 0.75rem;
    line-height: 1.4;
  }

  .badge-rarity {
    display: inline-block;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    color: white;
    font-size: 0.75rem;
    font-weight: bold;
    text-transform: uppercase;
  }

  .badges-sidebar {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
  }

  .leaderboard-card,
  .badge-categories,
  .badge-rarity-guide {
    background: white;
    border-radius: 12px;
    padding: 1.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
  }

  .leaderboard-card h3,
  .badge-categories h3,
  .badge-rarity-guide h3 {
    font-size: 1.1rem;
    color: #333;
    margin-bottom: 1rem;
  }

  .leaderboard-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .leaderboard-row {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.75rem;
    background: #f9f9f9;
    border-radius: 6px;
    font-size: 0.9rem;
  }

  .leaderboard-rank {
    font-weight: bold;
    color: #667eea;
    min-width: 25px;
  }

  .leaderboard-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    object-fit: cover;
  }

  .leaderboard-name {
    flex: 1;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    color: #333;
  }

  .leaderboard-count {
    color: #999;
    font-size: 0.85rem;
  }

  .category-buttons {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .category-button {
    padding: 0.75rem;
    border: 1px solid #ddd;
    background: white;
    border-radius: 6px;
    cursor: pointer;
    font-size: 0.9rem;
    text-align: left;
    transition: all 0.2s;
  }

  .category-button:hover {
    background: #f5f5f5;
  }

  .category-button.active {
    background: #667eea;
    color: white;
    border-color: #667eea;
  }

  .rarity-legend {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .rarity-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    font-size: 0.9rem;
    color: #333;
  }

  .rarity-dot {
    width: 16px;
    height: 16px;
    border-radius: 50%;
  }

  .badge-notification {
    position: fixed;
    bottom: -100px;
    right: 20px;
    background: white;
    border-radius: 12px;
    padding: 1rem 1.5rem;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    transition: bottom 0.3s;
    z-index: 1000;
  }

  .badge-notification.show {
    bottom: 20px;
  }

  .badge-notification-content {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .badge-notification-icon {
    font-size: 2rem;
  }

  .badge-notification-text {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .badge-notification-title {
    font-size: 0.85rem;
    color: #999;
    margin: 0;
  }

  .badge-notification-name {
    font-weight: bold;
    color: #333;
    margin: 0;
  }

  @media (max-width: 768px) {
    .badges-content {
      grid-template-columns: 1fr;
    }

    .badges-header h1 {
      font-size: 1.8rem;
    }

    .badges-grid {
      grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    }

    .badge-card {
      padding: 1rem;
    }

    .badge-display {
      font-size: 2rem;
      margin-bottom: 0.75rem;
    }

    .badge-info h4 {
      font-size: 0.9rem;
    }

    .badge-info p {
      font-size: 0.75rem;
    }
  }
</style>

<script src="/js/badges.js"></script>
<script>
  document.addEventListener('DOMContentLoaded', async () => {
    const badgesGrid = document.getElementById('badges-grid');

    try {
      const response = await fetch('/api/badges');
      const data = await response.json();

      if (data.success) {
        const html = data.badges.map(badge => {
          const colors = {
            common: '#A0A0A0',
            uncommon: '#1EFF00',
            rare: '#0070DD',
            legendary: '#FF8000'
          };
          const color = colors[badge.rarity] || '#FFD700';

          return `
            <div class="badge-card" style="border-color: ${color};">
              <div class="badge-display">${badge.icon}</div>
              <div class="badge-info">
                <h4>${badge.name}</h4>
                <p>${badge.description}</p>
                <span class="badge-rarity" style="background-color: ${color};">
                  ${badge.rarity}
                </span>
              </div>
            </div>
          `;
        }).join('');

        badgesGrid.innerHTML = html;
      }
    } catch (err) {
      console.error('Error loading badges:', err);
      badgesGrid.innerHTML = '<p class="text-center">Failed to load badges</p>';
    }

    // Category filtering
    const categoryButtons = document.querySelectorAll('.category-button');
    categoryButtons.forEach(btn => {
      btn.addEventListener('click', async (e) => {
        const category = e.target.dataset.category;

        categoryButtons.forEach(b => b.classList.remove('active'));
        e.target.classList.add('active');

        try {
          const response = await fetch('/api/badges');
          const data = await response.json();

          if (data.success) {
            const filtered = category === 'all'
              ? data.badges
              : data.badges.filter(b => b.category === category);

            const html = filtered.map(badge => {
              const colors = {
                common: '#A0A0A0',
                uncommon: '#1EFF00',
                rare: '#0070DD',
                legendary: '#FF8000'
              };
              const color = colors[badge.rarity] || '#FFD700';

              return `
                <div class="badge-card" style="border-color: ${color};">
                  <div class="badge-display">${badge.icon}</div>
                  <div class="badge-info">
                    <h4>${badge.name}</h4>
                    <p>${badge.description}</p>
                    <span class="badge-rarity" style="background-color: ${color};">
                      ${badge.rarity}
                    </span>
                  </div>
                </div>
              `;
            }).join('');

            badgesGrid.innerHTML = html;
          }
        } catch (err) {
          console.error('Error filtering badges:', err);
        }
      });
    });
  });
</script>
