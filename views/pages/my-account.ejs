<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>My Account - RS News</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <%-include('../components/navbar') %>

  <div class="container">
    <div class="account-container">
      <div class="account-sidebar">
        <div class="profile-card">
          <div class="profile-image-container">
            <% if (user.profileImage) { %>
              <img id="profileImagePreview" src="<%= user.profileImage %>" alt="Profile">
            <% } else { %>
              <div id="profileImagePreview" class="default-avatar">
                <%= user.username.charAt(0).toUpperCase() %>
              </div>
            <% } %>
            <label for="profileImageInput" class="upload-btn">Change Photo</label>
            <input type="file" id="profileImageInput" accept="image/*" style="display: none;">
          </div>
          <h2><%= user.username %></h2>
          <p class="email"><%= user.email %></p>
        </div>

        <nav class="account-nav">
          <a href="#profile" class="nav-link active" data-tab="profile">Profile</a>
          <a href="#store" class="nav-link" data-tab="store">Store Info</a>
          <a href="#security" class="nav-link" data-tab="security">Security</a>
        </nav>
      </div>

      <div class="account-main">
        <!-- Profile Tab -->
        <div id="profile" class="tab-content active">
          <h2>Profile Information</h2>

          <form id="profileForm" class="account-form">
            <div class="form-row">
              <div class="form-group">
                <label for="firstName">First Name</label>
                <input type="text" id="firstName" name="firstName" value="<%= user.firstName || '' %>">
              </div>

              <div class="form-group">
                <label for="lastName">Last Name</label>
                <input type="text" id="lastName" name="lastName" value="<%= user.lastName || '' %>">
              </div>
            </div>

            <div class="form-group">
              <label for="bio">Bio</label>
              <textarea id="bio" name="bio" rows="4" maxlength="500"><%= user.bio || '' %></textarea>
              <small>Max 500 characters</small>
            </div>

            <div class="form-row">
              <div class="form-group">
                <label for="birthDate">Birth Date</label>
                <input type="date" id="birthDate" name="birthDate" value="<%= user.birthDate ? user.birthDate.toISOString().split('T')[0] : '' %>">
              </div>

              <div class="form-group">
                <label for="country">Country</label>
                <input type="text" id="country" name="country" value="<%= user.country || 'United States' %>">
              </div>
            </div>

            <div class="form-group">
              <label for="state">State/Province</label>
              <input type="text" id="state" name="state" value="<%= user.state || '' %>">
            </div>

            <button type="submit" class="btn btn-primary">Save Changes</button>
          </form>
        </div>

        <!-- Store Tab -->
        <div id="store" class="tab-content">
          <h2>Store Information</h2>

          <form id="storeForm" class="account-form">
            <div class="form-group">
              <label for="storeName">Store Name</label>
              <input type="text" id="storeName" name="storeName" value="<%= user.storeInfo.storeName || '' %>">
            </div>

            <div class="form-group">
              <label for="city">City</label>
              <input type="text" id="city" name="city" value="<%= user.storeInfo.city || '' %>">
            </div>

            <button type="submit" class="btn btn-primary">Save Store Info</button>
          </form>
        </div>

        <!-- Security Tab -->
        <div id="security" class="tab-content">
          <h2>Security Settings</h2>

          <div class="security-section">
            <h3>Change Password</h3>
            <form id="changePasswordForm" class="account-form">
              <div class="form-group">
                <label for="currentPassword">Current Password</label>
                <input type="password" id="currentPassword" name="currentPassword" required>
              </div>

              <div class="form-group">
                <label for="newPassword">New Password</label>
                <input type="password" id="newPassword" name="newPassword" required minlength="6">
              </div>

              <div class="form-group">
                <label for="confirmNewPassword">Confirm New Password</label>
                <input type="password" id="confirmNewPassword" name="confirmNewPassword" required minlength="6">
              </div>

              <button type="submit" class="btn btn-primary">Update Password</button>
            </form>
          </div>

          <div class="security-section">
            <h3>Account Actions</h3>
            <p>
              <a href="/auth/logout" class="btn btn-secondary">Logout</a>
            </p>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%-include('../components/footer') %>

  <script src="/js/account.js"></script>
</body>
</html>
