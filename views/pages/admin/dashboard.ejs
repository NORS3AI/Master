<%- include('../../layout') %>

<div class="admin-dashboard">
  <div class="container-fluid">
    <div class="dashboard-header">
      <h1>üìä Admin Dashboard</h1>
      <p>Real-time platform metrics and analytics</p>
    </div>

    <!-- Date Range Selector -->
    <div class="dashboard-controls">
      <div class="date-range-selector">
        <label for="dateRange">Select Period:</label>
        <select id="dateRange">
          <option value="today">Today</option>
          <option value="week">This Week</option>
          <option value="month" selected>This Month</option>
          <option value="year">This Year</option>
          <option value="custom">Custom Range</option>
        </select>
      </div>
      <div class="dashboard-actions">
        <button class="btn btn-primary" id="refreshBtn">üîÑ Refresh</button>
        <button class="btn btn-secondary" id="exportBtn">üì• Export Data</button>
      </div>
    </div>

    <!-- Key Metrics Cards -->
    <div class="metrics-grid">
      <div class="metric-card">
        <div class="metric-icon">üë•</div>
        <div class="metric-content">
          <h3>Total Users</h3>
          <div class="metric-value" id="totalUsers">-</div>
          <p class="metric-label" id="newUsers">+ new this month</p>
        </div>
      </div>

      <div class="metric-card">
        <div class="metric-icon">üì∞</div>
        <div class="metric-content">
          <h3>Articles</h3>
          <div class="metric-value" id="totalArticles">-</div>
          <p class="metric-label" id="newArticles">+ published</p>
        </div>
      </div>

      <div class="metric-card">
        <div class="metric-icon">üí¨</div>
        <div class="metric-content">
          <h3>Comments</h3>
          <div class="metric-value" id="totalComments">-</div>
          <p class="metric-label" id="newComments">+ this month</p>
        </div>
      </div>

      <div class="metric-card">
        <div class="metric-icon">üëÅÔ∏è</div>
        <div class="metric-content">
          <h3>Total Views</h3>
          <div class="metric-value" id="totalViews">-</div>
          <p class="metric-label" id="activeUsers">active users</p>
        </div>
      </div>

      <div class="metric-card">
        <div class="metric-icon">üì§</div>
        <div class="metric-content">
          <h3>Shares</h3>
          <div class="metric-value" id="totalShares">-</div>
          <p class="metric-label">this month</p>
        </div>
      </div>

      <div class="metric-card">
        <div class="metric-icon">‚ù§Ô∏è</div>
        <div class="metric-content">
          <h3>Favorites</h3>
          <div class="metric-value" id="totalFavorites">-</div>
          <p class="metric-label">total</p>
        </div>
      </div>

      <div class="metric-card">
        <div class="metric-icon">üìà</div>
        <div class="metric-content">
          <h3>Engagement Rate</h3>
          <div class="metric-value" id="engagementRate">-</div>
          <p class="metric-label">% of active users</p>
        </div>
      </div>

      <div class="metric-card">
        <div class="metric-icon">‚ö°</div>
        <div class="metric-content">
          <h3>Active Users</h3>
          <div class="metric-value" id="activeUserCount">-</div>
          <p class="metric-label">this period</p>
        </div>
      </div>
    </div>

    <!-- Charts Section -->
    <div class="charts-section">
      <div class="chart-container">
        <h2>User Growth</h2>
        <canvas id="userGrowthChart"></canvas>
      </div>

      <div class="chart-container">
        <h2>Engagement Trends</h2>
        <canvas id="engagementChart"></canvas>
      </div>
    </div>

    <!-- Top Items Section -->
    <div class="top-items-section">
      <div class="top-articles-widget">
        <h2>üî• Top Articles This Month</h2>
        <div id="topArticlesList" class="items-list">
          <p class="loading">Loading articles...</p>
        </div>
      </div>

      <div class="top-authors-widget">
        <h2>‚úçÔ∏è Most Active Authors</h2>
        <div id="topAuthorsList" class="items-list">
          <p class="loading">Loading authors...</p>
        </div>
      </div>

      <div class="top-categories-widget">
        <h2>üè∑Ô∏è Popular Categories</h2>
        <div id="topCategoriesList" class="items-list">
          <p class="loading">Loading categories...</p>
        </div>
      </div>
    </div>

    <!-- Real-time Activity Feed -->
    <div class="activity-feed-widget">
      <h2>‚ö° Real-time Activity</h2>
      <div id="realtimeActivity" class="activity-list">
        <p class="loading">Loading activities...</p>
      </div>
    </div>
  </div>
</div>

<style>
  .admin-dashboard {
    padding: 2rem 0;
    background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    min-height: 100vh;
  }

  .container-fluid {
    padding: 0 2rem;
  }

  .dashboard-header {
    text-align: center;
    color: white;
    margin-bottom: 2rem;
  }

  .dashboard-header h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .dashboard-header p {
    font-size: 1.1rem;
    opacity: 0.9;
  }

  .dashboard-controls {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 2rem;
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .date-range-selector {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .date-range-selector select {
    padding: 0.75rem 1rem;
    border: 2px solid #ddd;
    border-radius: 6px;
    font-size: 1rem;
    cursor: pointer;
  }

  .dashboard-actions {
    display: flex;
    gap: 1rem;
  }

  .btn {
    padding: 0.75rem 1.5rem;
    border: none;
    border-radius: 6px;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.2s;
  }

  .btn-primary {
    background: #667eea;
    color: white;
  }

  .btn-primary:hover {
    background: #5568d3;
  }

  .btn-secondary {
    background: #f0f0f0;
    color: #333;
  }

  .btn-secondary:hover {
    background: #e0e0e0;
  }

  .metrics-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(250px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }

  .metric-card {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
    display: flex;
    align-items: flex-start;
    gap: 1.5rem;
  }

  .metric-icon {
    font-size: 2.5rem;
    flex-shrink: 0;
  }

  .metric-content {
    flex: 1;
  }

  .metric-content h3 {
    font-size: 0.9rem;
    color: #999;
    margin-bottom: 0.5rem;
    text-transform: uppercase;
  }

  .metric-value {
    font-size: 2rem;
    font-weight: bold;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .metric-label {
    font-size: 0.85rem;
    color: #666;
    margin: 0;
  }

  .charts-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .chart-container {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .chart-container h2 {
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    color: #333;
  }

  .chart-container canvas {
    max-height: 300px;
  }

  .top-items-section {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    margin-bottom: 2rem;
  }

  .top-articles-widget,
  .top-authors-widget,
  .top-categories-widget {
    background: white;
    padding: 1.5rem;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .top-articles-widget h2,
  .top-authors-widget h2,
  .top-categories-widget h2 {
    font-size: 1.2rem;
    margin-bottom: 1rem;
    color: #333;
  }

  .items-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .item {
    padding: 1rem;
    background: #f9f9f9;
    border-radius: 6px;
    border-left: 4px solid #667eea;
    transition: all 0.2s;
  }

  .item:hover {
    background: #f0f0f0;
    transform: translateX(5px);
  }

  .item-title {
    font-weight: 600;
    color: #333;
    margin-bottom: 0.5rem;
  }

  .item-stats {
    display: flex;
    gap: 1rem;
    font-size: 0.85rem;
    color: #666;
  }

  .item-stat {
    display: flex;
    align-items: center;
    gap: 0.3rem;
  }

  .activity-feed-widget {
    background: white;
    padding: 2rem;
    border-radius: 12px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
  }

  .activity-feed-widget h2 {
    font-size: 1.3rem;
    margin-bottom: 1.5rem;
    color: #333;
  }

  .activity-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-height: 400px;
    overflow-y: auto;
  }

  .activity-item {
    padding: 1rem;
    background: #f9f9f9;
    border-radius: 6px;
    border-left: 3px solid #667eea;
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .activity-timestamp {
    font-size: 0.8rem;
    color: #999;
    white-space: nowrap;
  }

  .activity-description {
    color: #666;
    font-size: 0.95rem;
  }

  .loading {
    text-align: center;
    color: #999;
    padding: 2rem;
  }

  @media (max-width: 768px) {
    .dashboard-controls {
      flex-direction: column;
      align-items: stretch;
      gap: 1rem;
    }

    .date-range-selector {
      flex-direction: column;
    }

    .metrics-grid {
      grid-template-columns: 1fr;
    }

    .charts-section {
      grid-template-columns: 1fr;
    }

    .top-items-section {
      grid-template-columns: 1fr;
    }

    .dashboard-header h1 {
      font-size: 1.8rem;
    }
  }
</style>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="/js/dashboard.js"></script>
